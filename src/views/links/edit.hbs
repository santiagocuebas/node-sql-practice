
<div class="container">
	<div class="form-body form-add-styles">
		<form action="/links/edit/{{link.id}}" method="POST">
			<div class="form-box">
				<input class="form-input" type="text" name="title" placeholder="Title" value="{{link.title}}">
			</div>
			<div class="form-box">
				<input class="form-input" type="url" name="url" placeholder="URL" value="{{link.url}}">
			</div>
			<div class="form-box">
				<textarea class="form-input" name="description" placeholder="Description">{{link.description}}</textarea>
			</div>
			<div class="form-box">
				<button class="form-btn">Save</button>
			</div>
		</form>
	</div>
</div>
