<div class="box-links">
	{{#each links}}
		<div class="links">
			<h2 class="links-title">{{title}}</h2>
			<a href="{{url}}" class="links-a" target="_blank">{{url}}</a>
			<div class="links-content">
				<p>
					{{description}}
				</p>
			</div>
			<div class="links-timeago">
				{{timeago created_at}}
			</div>
			<div class="box-buttons">
				<a href="/links/delete/{{id}}" class="btn-delete">Delete</a>
				<a href="/links/edit/{{id}}" class="btn-edit">Edit</a>
			</div>
		</div>
	{{else}}
		<div class="create-link">
			<p>There are not links saved yet</p>
			<a href="/links/add">Create One!</a>
		</div>
	{{/each}}
</div>